---
import type { NavigationItem } from '@/components/navigation'
import NavigationItems from './NavigationItems.svelte'
import LuMoon from 'lucide-static/icons/moon.svg?raw'
import LuSun from 'lucide-static/icons/sun.svg?raw'
import LuMenu from 'lucide-static/icons/menu.svg?raw'

interface Props {
	navigationItems: NavigationItem[]
}

const { navigationItems } = Astro.props
---


<script>
	document.getElementById('theme-toggle')?.addEventListener('click', () => {
		document.documentElement.style.colorScheme = document.documentElement.style.colorScheme === 'dark' ? 'light' : 'dark'
		localStorage.setItem('theme', document.documentElement.style.colorScheme)
	})
</script>


<nav>
	<header>
		<a href="/">
			<picture>
				<source
					srcset="/logo-dark.svg"
					media="(prefers-color-scheme: dark)"
				/>
				<img
					src="/logo-light.svg"
					alt="WalletBeat Logo"
				/>
			</picture>
		</a>

		<menu>
			<li>
				<button
					id="theme-toggle"
					type="button"
					class="stack"
				>
					<span set:html={LuSun} />
					<span set:html={LuMoon} />
				</button>
			</li>

			<li>
				<button
					id="menu-toggle"
					type="button"
					popovertarget="nav-menu"
				>
					<span set:html={LuMenu} />
				</button>
			</li>
		</menu>
	</header>

	<div>
		<NavigationItems items={navigationItems} client:load />
	</div>

	<footer>
		<p>
			Wallets listed on this page are not official endorsements, and are provided for informational
			purposes only.
		</p>
	</footer>
</nav>


<style>
	nav {
		width: 20rem;
		max-width: 20rem;
		position: sticky;
		top: 0;
		height: 100vh;
		
		background: var(--navigation-bg);
		border-right: 1px solid var(--border-color);
		display: grid;
		grid-template-rows: auto 1fr auto;
		gap: 0.25rem;
		overflow-y: auto;
		z-index: 40;

		@media (max-width: 1024px) {
			width: 100%;
			height: auto;
			position: relative;
		}

		> header {
			display: grid;
			grid-template-columns: 1fr auto;
			gap: 1rem;
			padding: 1rem;
			align-items: center;

			@media (max-width: 1024px) {
				padding-top: 4rem;
				margin-top: 0;
			}

			menu {
				display: flex;
				align-items: center;
				gap: 0.5rem;

				li {
					display: contents;
				}

				button {
					svg {
						width: 1.25em;
						height: 1.25em;
						transition-property: color;
					}
				}

				#theme-toggle {
					> :first-child {
						color: light-dark(currentColor, transparent);
					}
					> :last-child {
						color: light-dark(transparent, currentColor);
					}
				}
			}

			a {
				display: flex;
				align-items: center;
				border-radius: 0.25rem;
				transition: opacity 0.2s ease;

				&:hover {
					opacity: 0.8;
				}

				picture {
					display: flex;
					align-items: center;
				}

				img {
					height: 2rem;
					width: auto;
					transition: all 0.3s ease;
				}
			}
		}

		> div {
			font-size: smaller;
			padding: 1rem;
		}
	}

	footer {
		position: sticky;
		bottom: 1rem;
		margin: 0.75em;
		padding: 1rem;
		background: var(--accent-very-light);
		border-radius: 0.5rem;
		font-size: 0.875rem;
		color: var(--text-secondary);
		text-align: left;
		border: 1px solid color-mix(in srgb, var(--accent) 20%, transparent);
		transition: all 0.2s ease;

		&:hover {
			background: color-mix(in srgb, var(--accent-very-light) 80%, var(--accent));
		}

		p {
			margin: 0;
			line-height: 1.4;
		}
	}
</style>
